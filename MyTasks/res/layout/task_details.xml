<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

	<EditText android:id="@+id/task_details_name"
    	android:layout_width="fill_parent"
       	android:layout_height="wrap_content"
       	android:text="Task name"/>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">       
		<TextView android:id="@+id/task_detail_due_date_label"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/dueDate"/>
	    <TextView android:id="@+id/task_detail_due_date"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="2011-03-22 09:15:01"/>
	    <Button android:id="@+id/task_detail_pick_date_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/pickDate"/>
	</LinearLayout>
  	<EditText android:id="@+id/task_details_description"
    	android:layout_width="fill_parent"
       	android:layout_height="wrap_content"
       	android:text="Task description"
       	android:layout_weight="2"/>
	<Button android:id="@+id/task_details_update"
       	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:text="@string/update"/>
  	
</LinearLayout>
